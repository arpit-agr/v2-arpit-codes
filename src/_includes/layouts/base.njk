<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <!-- if js is available add class -->
  <script>document.documentElement.classList.add('has-js');</script>
  
  <!-- css -->
  {%- css %}{%- include "css/styles.njk" -%}{% endcss %}
  <style>{% getBundle "css" %}</style>
  <style>{% getBundle "css", "page-specific-styles" %}</style>
  
  <!-- preload scripts and fonts -->
  <link
    rel="preload"
    href="/assets/scripts/main-nav.js?{{ assetHash }}"
    as="script"
    fetchpriority="high"
  >
  <!-- TODO: preload the image in the site header -->
  {# <link
    rel="preload"
    as="image"
    href="{{ developer.avatar.src }}?{{ assetHash }}"
  > #}
  <link
    rel="preload"
    href="/assets/fonts/GolosText-VariableFont_wght-subset.woff2?{{ assetHash }}"
    as="font"
    type="font/woff2"
    crossorigin=""
  >  
  <!-- inject elements from layout files -->
  {% getBundle "html", "head" %}
  
  <!-- meta information -->
  {%- include "partials/meta-info.html" -%}

  <meta name="view-transition" content="same-origin" />
</head>

<body class="wrapper" id="top">
  <a href="#main" class="skip-to-main">Skip to content</a>

  {% include "partials/header.html" %}

  <main id="main" tabindex="-1">
    {%- block content -%}
      This page is under maintenance.
    {%- endblock -%}
  </main>

  {% include "partials/footer.html" %}

  {% if page.url == "/" %}
    <div class="god-rays" aria-hidden="true"></div>
  {% endif %}

  <script src="/assets/scripts/main-nav.js?{{ assetHash }}" defer></script>
  
  <!-- inject elements from layout files -->
  {% getBundle "js", "body" %}
</body>
</html>