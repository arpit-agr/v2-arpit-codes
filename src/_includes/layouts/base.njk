<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <!-- if js is available add class -->
  <script>document.documentElement.classList.add('has-js');</script>
  
  <!-- css -->
  {%- css %}{%- include "css/styles.njk" -%}{% endcss %}
  <style>{% getBundle "css" %}</style>
  <style>{% getBundle "css", "page-specific-styles" %}</style>
  
  <!-- preload scripts and fonts -->
  <link rel="preload" href="/assets/scripts/main-nav.js?{{ assetHash }}" as="script" fetchpriority="high">
  {# {% if page.url !== "/" %}
    <link
      rel="preload"
      href="/assets/fonts/afronaut-regular-subset.woff2?{{ assetHash }}"
      as="font"
      type="font/woff2"
      crossorigin=""
    >
  {% endif %} #}
  
  <!-- inject elements from layout files -->
  {% getBundle "html", "head" %}
  
  <!-- meta information -->
  {%- include "partials/meta-info.html" -%}
</head>

<body class="wrapper" id="top">
  <a href="#main" class="skip-to-main">Skip to content</a>

  <header class="site-head">
    {% include "partials/header.html" %}
  </header>

  <main class="fill-vh" id="main" tabindex="-1">
    {%- block content -%}
      This page is under maintenance.
    {%- endblock -%}
  </main>

  <footer
    class="site-footer color:secondary step--2"
    role="contentinfo"
  >
    <a href="#top">Back to top &uarr;</a>
  </footer>

  <script src="/assets/scripts/main-nav.js?{{ assetHash }}" defer></script>
  
  <!-- inject elements from layout files -->
  {% getBundle "js", "body" %}
</body>
</html>